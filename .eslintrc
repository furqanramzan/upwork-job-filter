{
  "root": true,
  "env": {
    "browser": true,
    "node": true
  },
  "extends": [
    "@antfu",
    "@nuxtjs/eslint-config-typescript",
    "plugin:prettier/recommended"
  ],
  "overrides": [
    {
      "files": ["./server/**/*.ts"],
      "rules": {
        "no-console": [
          "error",
          {
            "allow": ["info", "warn", "trace", "error"]
          }
        ]
      }
    }
  ]
}
